<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FoodStuff - Order</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body onload="cartScript();">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("FoodStuff", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
                <button id="cart" type="button" class="btn navbar-brand btn-link navbar-right" style="display: none;" onclick="removeClass('shop', 'hidden'); removeClass('foodmenu', 'col-lg-12'); addClass('foodmenu', 'col-lg-6'); animShop();">
                    <span class="glyphicon glyphicon-shopping-cart"></span>
                </button>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <noscript>You have to enable javascript in your browser to use this web site.</noscript>
        @RenderBody()
    </div>
    <br />
    <footer>
        <p class="text-center">&copy; @DateTime.Now.Year - made by Kazu <br /> <a href="https://github.com/KazuOfficial" target="_blank">https://github.com/KazuOfficial</a></p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/custom")
    @RenderSection("scripts", required: false)
</body>
</html>
