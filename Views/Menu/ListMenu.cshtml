    <div id="form" class="form-group hidden">
        <h4>Where do you want your order to be delivered?</h4>
        <input type="text" class="form-control" placeholder="Name"><br />
        <input type="text" class="form-control" placeholder="Address"><br />
        <input type="text" class="form-control" placeholder="Flat number"><br />
        <input type="text" class="form-control" placeholder="Phone"><br />
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Email"><br />
        <input type="text" class="form-control" placeholder="Comments"><br />
        <hr />
    </div>

    <div id="paypal-button-container" class="form-group hidden"></div>
    <script src="https://www.paypal.com/sdk/js?client-id=sb&currency=USD" data-sdk-integration-source="button-factory"></script>
    <script>
        paypal.Buttons({
            style: {
                shape: 'rect',
                color: 'gold',
                layout: 'vertical',
                label: 'paypal',

            },
            createOrder: function (data, actions) {
                return actions.order.create({
                    purchase_units: [{
                        amount: {
                            value: '1'
                        }
                    }]
                });
            },
            onApprove: function (data, actions) {
                return actions.order.capture().then(function (details) {
                    alert('Transaction completed by ' + details.payer.name.given_name + '!');
                });
            }
        }).render('#paypal-button-container');
    </script>

    <span class="pull-right">Value of the order: <b id="fullp"></b></span><br /><br />

    <button id="placeanorder" type="button" class="list-group-item list-group-item-action" onclick="removeClass('form', 'hidden'); removeClass('paymenttype', 'hidden'); addClass('placeanorder', 'hidden');">PLACE AN ORDER</button>
    <button id="paymenttype" type="button" class="list-group-item list-group-item-action hidden" onclick="removeClass('paypal-button-container', 'hidden');  addClass('paymenttype', 'hidden'); addClass('form', 'hidden');">SELECT PAYMENT TYPE</button>
</div>
<div id="foodmenu" class="col-lg-12">
    <!--<div class="col-lg-6">-->
    <div class="list-group">
        @foreach (var item in Model)
        {
            <h4>@Html.DisplayFor(modelItem => item.Category)</h4>
            <button type="button" class="list-group-item list-group-item-action" onclick="removeClass('shop', 'hidden'); addItem('@(item.Name)', @(item.Price)); addRow(); fullPrice();">
                <span class="badge badge-primary badge">$@Html.DisplayFor(modelItem => item.Price)</span>
                @Html.DisplayFor(modelItem => item.Name)<br />
                <small>@Html.DisplayFor(modelItem => item.Description)</small>
            </button>
        }
    </div>
</div>
